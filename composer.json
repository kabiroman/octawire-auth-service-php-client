{
    "name": "kabiroman/octawire-auth-service-php-client",
    "description": "PHP client for Octawire Auth Service (gRPC)",
    "type": "library",
    "keywords": ["auth", "jwt", "grpc", "octawire"],
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "grpc/grpc": "^1.57",
        "google/protobuf": "^4.26"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "predis/predis": "^2.0"
    },
    "suggest": {
        "predis/predis": "Required for Redis-based key caching"
    },
    "autoload": {
        "psr-4": {
            "Kabiroman\\Octawire\\AuthService\\Client\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Kabiroman\\Octawire\\AuthService\\Client\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "generate-proto": "./generate-proto.sh"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}

